<div class="login">
  <%= form_tag '/top/login', method: :post do %>
    <p><%= label_tag :uid, 'ユーザID' %>
    <%= text_field_tag :uid %></p>
    <p><%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %></p>
    <p class="btn">
      <%= submit_tag 'ログイン' ,class: 'submit' %>
      <%= link_to '戻る', :back , {class: "back-link"}%>
    </p>
  <% end %>
  <br>
</div>